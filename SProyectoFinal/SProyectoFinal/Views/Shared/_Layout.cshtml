<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RedMenTe</title>

    <link rel="icon" href="~/img/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/RedMente2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="font-family: 'Poppins', sans-serif; color: #333333;">

    <!-- Header superior -->
    <div class="container-fluid d-none d-lg-block bg-white border-bottom">
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoRedMenTe.jpg" style="height: 50px; margin-right: 10px;" />
                    <h1 class="m-0" style="font-size: 1.5rem;">
                        <span style="color: #333;">Red</span><span style="color: #7C3AED;">MenTe</span>
                    </h1>
                </a>
            </div>
            <div class="col-lg-3 d-flex align-items-center">
                <i class="fas fa-map-marker-alt me-2" style="color:#7C3AED;"></i>
                <div><h6 class="mb-0">San José, Costa Rica</h6></div>
            </div>
            <div class="col-lg-3 d-flex align-items-center">
                <i class="fas fa-envelope me-2" style="color:#7C3AED;"></i>
                <div><h6 class="mb-0">info@ideasenaccion.com</h6></div>
            </div>
            <div class="col-lg-3 d-flex align-items-center">
                <i class="fas fa-phone me-2" style="color:#7C3AED;"></i>
                <div><h6 class="mb-0">+506 8821-2322</h6></div>
            </div>
        </div>
    </div>

    <!-- Navegación horizontal -->
    <div class="container-fluid bg-light border-top">
        <div class="row px-xl-5">
            <nav class="navbar navbar-expand-lg navbar-light col-lg-9">
                <a class="d-block d-lg-none text-decoration-none" asp-controller="Home" asp-action="Index">
                    <img src="~/img/LogoRedMenTe.jpg" style="height: 50px;" />
                    <h1 class="m-0"><span style="color: #333;">Red</span><span style="color: #7C3AED;">MenTe</span></h1>
                </a>
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Usuario" asp-action="ActualizarPerfil">Perfil</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Proyectos">Proyectos/Cursos</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Suscripciones" asp-action="Index" >Calendario</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Actividades" asp-action="Index">Gestionar Actividades</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Login" asp-action="IniciarSesion">Salir</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>

    <!-- Cuerpo dinámico -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top mt-4 text-white py-3" style="background: #333;">
        <div class="container text-center">
            &copy; 2025 - RedMenTe - <a asp-controller="Home" asp-action="Privacy" class="text-light">IeA</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

