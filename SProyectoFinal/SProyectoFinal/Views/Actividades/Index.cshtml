@model List<Actividades>
@{
    ViewData["Title"] = "Administrar actividades";
}

<div class="container mt-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-dark">
            <i class="fas fa-tasks me-2" style="color: #7C3AED;"></i> Actividades registradas
        </h3>
        <a asp-action="Crear" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i> Crear nueva actividad
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th>Fecha</th>
                    <th>Ubicación</th>
                    <th>Organizador</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var act in Model)
                    {
                        <tr>
                            <td>@act.Titulo</td>
                            <td>@(act.Fecha.HasValue ? act.Fecha.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td>@act.Ubicacion</td>
                            <td>@act.NombreOrganizador</td>
                            <td class="text-center">
                                <a asp-action="Editar" asp-route-id="@act.ActividadID" class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="VerSuscripciones" asp-route-actividadId="@act.ActividadID" class="btn btn-sm btn-info">
                                    <i class="fas fa-user-check"></i> Suscripciones
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            <i class="fas fa-info-circle me-2"></i> No hay actividades registradas aún.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
