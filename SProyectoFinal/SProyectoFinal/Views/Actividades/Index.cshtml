                        <th><i class="fas fa-map-marker-alt me-1 text-secondary"></i> Ubicación</th>
                        <th class="text-center"><i class="fas fa-cogs me-1 text-secondary"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                <a asp-action="VerSuscripciones" asp-route-actividadId="ActividadID" class="btn btn-sm btn-info">
                    <i class="fas fa-user-check"></i> Suscripciones
                </a>
