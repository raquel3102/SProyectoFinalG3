@model Autenticacion
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5" style="height: 90vh;">
    <div class="row justify-content-center">

        <!-- Información Personal -->
        <div class="col-lg-8">
            <div class="card border-0 shadow mb-4">
                <div class="card-header text-white" style="background-color: #10B981;">
                    <h5 class="m-0">Información Personal</h5>
                </div>
                <input id="Mensaje" type="hidden" value="@ViewBag.Mensaje" />
                <form class="form-horizontal" asp-controller="Usuario" asp-action="ActualizarPerfil">
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="fullname" class="col-sm-3 text-right control-label col-form-label" style="color: #7C3AED;">Identificación</label>
                            <div class="col-sm-6 mb-3">
                                <input type="text" class="form-control" asp-for="Cedula" onkeyup="ConsultarPersonaApi();" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label" style="color: #7C3AED;">Nombre</label>
                            <div class="col-sm-6 mb-3">
                                <input type="text" class="form-control" asp-for="Nombre" onkeyup="ConsultarPersonaApi();" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 text-right control-label col-form-label" style="color: #7C3AED;">Correo Electrónico</label>
                            <div class="col-sm-6 mb-3">
                                <input type="email" class="form-control" asp-for="Correo" />
                            </div>
                        </div>
                        <div class="form-group row mb-4">
                            <label for="email20" class="col-sm-3 text-right control-label col-form-label" style="color: #7C3AED;">Rol de Usuario</label>
                            <div class="col-sm-6 mb-3">
                                <input type="text" class="form-control" asp-for="Nombre_Rol" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group m-b-2 text-center">
                            <button type="submit" class="btn btn-info waves-effect waves-light">Actualizar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Resumen de Actividades -->
        <div class="col-lg-8">
            <div class="card border-0 shadow mb-4">
                <div class="card-header text-white" style="background-color: #10B981;">
                    <h5 class="m-0">Resumen de Actividades</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong style="color: #7C3AED;">Proyectos Completados:</strong><span> 5</span></li>
                        <li class="list-group-item"><strong style="color: #7C3AED;">Actividades en Progreso:</strong><span> 3</span></li>
                        <li class="list-group-item"><strong style="color: #7C3AED;">Última Actividad:</strong><span> 01/04/2025</span></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Notificaciones -->
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header text-white" style="background-color: #10B981;">
                    <h5 class="m-0">Notificaciones</h5>
                </div>
                <div class="card-body">
                    <p class="text-warning"><i class="fas fa-exclamation-circle"></i> Han pasado más de 6 meses desde tu última actualización. <a href="#" style="color: #7C3AED;">Actualiza tu perfil</a>.</p>
                    <p class="text-danger"><i class="fas fa-times-circle"></i> Faltan datos obligatorios en tu perfil. <a href="#" style="color: #7C3AED;">Completa tu información</a>.</p>
                </div>
            </div>
        </div>

    </div>
</div>


<script src="~/lib/jquery.min.js"></script>
<script src="~/js/ConsultarCedulas.js"></script>