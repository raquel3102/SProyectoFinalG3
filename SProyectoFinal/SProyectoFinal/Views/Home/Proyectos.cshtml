@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5" style="max-width: 1200px;">

    <!-- Título -->
    <div class="text-center mb-4">
        <h1 class="fw-bold" style="color: #7C3AED;">📚 Cursos</h1>
        <p class="fs-5 fw-semibold" style="color: #10B981;">
            Consulta los cursos disponibles, tu progreso y las actividades pendientes.
        </p>
    </div>

    <!-- Card principal -->
    <div class="card shadow border-0 rounded-4">
        <!-- Header con degradado morado -->
        <div class="card-header text-white rounded-top-4" style="background: linear-gradient(90deg, #7C3AED, #6D28D9);">
            <h5 class="m-0 fw-bold"><i class="bi bi-journal-bookmark-fill me-2"></i>Acciones de Cursos</h5>
        </div>

        <!-- Body -->
        <div class="card-body text-center p-5">
            <p class="mb-4 text-muted fs-6">Selecciona la acción que deseas realizar:</p>

            <div class="d-flex flex-wrap justify-content-center gap-3">
                <!-- Botón verde -->
                <a asp-controller="Home" asp-action="MisCursosInscritos"
                   class="btn btn-lg px-4 py-3 shadow-sm fw-bold"
                   style="background-color: #10B981; color: white; border-radius: 12px;">
                    <i class="bi bi-bookmark-star-fill me-2"></i> Ver mis cursos
                </a>

                <!-- Botón morado -->
                <a asp-controller="Home" asp-action="ListarCursos"
                   class="btn btn-lg px-4 py-3 shadow-sm fw-bold"
                   style="background-color: #7C3AED; color: white; border-radius: 12px;">
                    <i class="bi bi-collection-play-fill me-2"></i> Ver todos los cursos
                </a>
            </div>
        </div>
    </div>

    <!-- Footer opcional -->
    <div class="text-center mt-4">
        <small class="text-muted">Mantén tu progreso actualizado para obtener tus certificados.</small>
    </div>
</div>
