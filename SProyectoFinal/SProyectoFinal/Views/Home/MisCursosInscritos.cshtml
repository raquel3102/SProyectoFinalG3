@model List<Curso>

<div class="container-fluid my-5" style="max-width: 1200px;">

    <h2 class="font-weight-bold text-center mb-4" style="color: #7C3AED;">
        Mis Cursos Inscritos
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow" style="background-color: #EDE9FE; color: #6D28D9;">
            Aún no te has inscrito en ningún curso.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var curso in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-lg border-0" style="border-radius: 15px;">
                        <div class="card-body" style="background-color: #FFFFFF;">
                            <h5 class="card-title font-weight-bold" style="color: #10B981;">
                                @curso.Nombre
                            </h5>
                            <p class="card-text text-muted">
                                @curso.Descripcion
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge" style="background-color: #EDE9FE; color: #6D28D9;">
                                    Activo
                                </span>
                                <a href="@Url.Action("Contenido", "Home", new { id = curso.CursoID })"
                                   class="btn font-weight-bold"
                                   style="background-color: #10B981; color: white; border-radius: 25px; padding: 8px 20px;">
                                    Ver Contenido
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
