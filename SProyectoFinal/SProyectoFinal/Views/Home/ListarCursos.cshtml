@model List<Curso>

<div class="container my-5" style="max-width: 1200px;">
    <h2 class="fw-bold mb-3 text-purple">📚 Cursos Disponibles</h2>
    <p class="text-muted mb-4">Elige el curso que más te interese e inscríbete fácilmente.</p>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center fw-bold">
            No hay cursos disponibles en este momento.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var curso in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-lg rounded-4">
                        <div class="card-header text-white fw-bold" style="background-color: #7C3AED;">
                            @curso.Nombre
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <p class="text-muted mb-2">@curso.Descripcion</p>
                            <p><strong>Requisitos:</strong> @curso.Requisitos</p>
                            <p><strong>Inicio:</strong> @curso.FechaInicio.ToShortDateString()</p>
                            <p><strong>Fin:</strong> @curso.FechaFin.ToShortDateString()</p>
                        </div>
                        <div class="card-footer bg-white border-0 text-center">
                            @if (curso.EstaInscrito)
                            {
                                <button class="btn btn-success w-100 fw-bold rounded-pill" disabled>
                                    ✅ Inscrito
                                </button>
                            }
                            else
                            {
                                <form asp-controller="Inscripcion" asp-action="Inscribir" method="post" class="m-0">
                                    <input type="hidden" name="cursoId" value="@curso.CursoID" />
                                    <button type="submit" class="btn w-100 fw-bold rounded-pill"
                                            style="background-color: #7C3AED; color: white;">
                                        ➕ Inscribirme
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .text-purple {
        color: #7C3AED;
    }

    .btn-success {
        background-color: #10B981 !important;
        border: none;
    }
</style>
