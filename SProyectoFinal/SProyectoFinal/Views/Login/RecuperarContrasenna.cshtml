@model SProyectoFinal.Models.UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
    <div class="row col-xl-10 col-lg-12">
        <!-- Sección de imagen lateral -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/img/LogotipoRedMenTe.jpg" alt="Imagen Lateral" style="width: 100%; height: auto; border-radius: 10px;" />
        </div>
        <!-- Sección del formulario -->
        <div class="col-md-6">
            <div class="card o-hidden border-0 shadow-lg" style="background-color: #FFFFFF; color: #333333;">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h1 class="h4" style="color: #3B82F6;">¿Olvidaste tu contraseña?</h1>
                        <p style="color: #7C3AED;">
                            Ingresa tu correo y te enviaremos un enlace para restablecer tu contraseña.
                        </p>
                    </div>
                    <form class="form-horizontal m-t-20" id="loginform" asp-controller="Login" asp-action="RecuperarContrasenna">

                        <input id="txtMensaje" type="hidden" value="@ViewBag.Mensaje" />
                        @ViewBag.Mensaje

                        <div class="form-group">
                            <input type="email" class="form-control form-control" placeholder="Ingresa tu correo electrónico." style="background-color: #FFFFFF; color: #333333; border: 1px solid #7C3AED;" asp-for="Correo"/>
                        </div>

                        <button type="submit" class="btn btn-block"
                               style="background-color: #3B82F6; color: #FFFFFF; border: none;"
                               onmouseover="this.style.backgroundColor='#7C3AED'; this.style.color='#FFFFFF';"
                                onmouseout="this.style.backgroundColor='#3B82F6'; this.style.color='#FFFFFF';">
                            Restablecer Contraseña
                        </button>
                    </form>


                    <hr>
                    <div class="text-center">
                        <a class="small" href="@Url.Action("RegistrarCuenta", "Login")" style="color: #7C3AED;">Crear una Cuenta!</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="@Url.Action("IniciarSesion", "Login")" style="color: #7C3AED;">Iniciar Sesión!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>